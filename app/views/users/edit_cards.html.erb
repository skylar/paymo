<%= form_for @user, :url => { :action => "edit_cards_confirm" } do |u| %>

	<div class="row">

		<div class="span4 well">
			<h3>Credit Card</h3>

			<div class="controls">
				<%= u.label :cc_number, 'Account Number' %>
				<%= u.text_field :cc_number %>
			</div>

			<div class="controls">
				<%= u.label :cc_number, 'Expiration' %>
				<div class="form-horizontal">
					<%= u.text_field :cc_month, class: 'input-mini' %> / 
					<%= u.text_field :cc_year, class: 'input-mini'%>
				</div>
			</div>
		</div>

		<div class="span4 offset1 well">
			<h3>Checking Account</h3>

			<div class="controls">
				<%= u.label :bank_account, 'Account Number' %>
				<%= u.text_field :bank_account %>
			</div>

			<div class="controls">
				<%= u.label :bank_routing, 'Routing Number' %>
				<%= u.text_field :bank_routing %>
			</div>
		</div>

	</div>

	<%= u.submit 'Save Changes', class: 'btn btn-primary' %>
<% end %>
